<% if @user.shopping_lists == [] %>
    <h1> Hi <%= @user.name %>, you have no shopping lists </h1>

<% else %>
    <h1> Hi <%= @user.name %>, here are your shopping lists </h1>
    <br>
    <% @user.shopping_lists.each do |list| %>
        <h2><a href="/shopping_lists/<%= list.id %>"><%= list.name %></a></h2>
        <br>
        <ul><% @list_price = 0 %>
        <% list.items.each do |item| %>
            <% @list_price += item.price %>
            <li id="item"><a href="/items/<%= item.id %>"><%= item.name %></a> $<%= item.price %></li>
            <br>
        <% end %></ul>
        <h3>Total $<%= @list_price%></h3>
        <br><br>
    <% end %>
<% end %>
<br><br>

<a href="/shopping_lists/new"><button>Create a New Shopping List</button></a><br><br>
<a href="/items/new"><button>Create More Items</button></a><br><br>
<a href="/logout"><button>Logout</button></a>